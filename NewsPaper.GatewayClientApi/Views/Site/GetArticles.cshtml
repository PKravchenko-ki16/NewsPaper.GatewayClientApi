@model IEnumerable<NewsPaper.GatewayClientApi.ViewModels.ArticleViewModel>

<h1>Index</h1>

<partial name="_Menu"/>

@if (ViewBag.Exception != null)
{
    <h3>Exception @ViewBag.Exception</h3>
}

@if (Model != null)
{
    <h3>В списке @Model.Count() элементов:</h3>
 
    @foreach(var article in Model)
    {
        <p>@article.Title</p>
        <p>@article.NikeNameAuthor</p>
        <p>@article.Description</p>
    }
}